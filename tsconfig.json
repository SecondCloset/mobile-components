{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "outDir": "./dist",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": "src",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "aspect-ratio",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-horizontal",
            "padding-vertical",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color"
          ]
        }
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "storybook",
    "**/*.spec.ts",
    "**/*.stories.tsx",
    "App.tsx",
    "android",
    "ios",
    ".expo",
    ".expo-shared",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".vscode"
  ],
}
